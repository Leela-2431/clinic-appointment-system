<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>All Appointments</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet">
  <style>
    body {
      font-family: 'Poppins', sans-serif;
      background: linear-gradient(to right, #f0f4ff, #dbeeff);
      margin: 0;
      padding: 0 20px 60px;
    }

    h2 {
      text-align: center;
      margin-top: 100px;
      color: #007bff;
      font-size: 2rem;
    }

    table {
      width: 100%;
      max-width: 1200px;
      margin: 30px auto;
      border-collapse: collapse;
      background-color: #fff;
      box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
      border-radius: 12px;
      overflow: hidden;
    }

    th, td {
      padding: 15px 20px;
      text-align: left;
      font-size: 1rem;
      color: #333;
    }

    th {
      background-color: #007bff;
      color: white;
      font-weight: 600;
    }

    tr:nth-child(even) {
      background-color: #f2f7ff;
    }

    tr:hover {
      background-color: #e6f2ff;
    }

    td {
      border-top: 1px solid #eee;
    }

    @media (max-width: 768px) {
      table {
        font-size: 0.9rem;
      }

      th, td {
        padding: 10px 12px;
      }

      h2 {
        font-size: 1.5rem;
      }
    }
  </style>
</head>
<body>
  <%- include("partials/navbar", { session: session }) %>

  <h2>All Appointments</h2>

  <table>
    <tr>
      <th>Patient Name</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Doctor</th>
      <th>Date</th>
      <th>Time</th>
      <th>Message</th>
    </tr>
    <% appointments.forEach(function(appointment) { %>
      <tr>
        <td><%= appointment.patient_name %></td>
        <td><%= appointment.email %></td>
        <td><%= appointment.phone %></td>
        <td><%= appointment.doctor_name %> (<%= appointment.specialization %>)</td>
        <td><%= appointment.appointment_date.toISOString().split('T')[0] %></td>
        <td><%= appointment.appointment_time %></td>
        <td><%= appointment.message || 'â€”' %></td>
      </tr>
    <% }) %>
  </table>
</body>
</html>
