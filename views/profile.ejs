<%- include("partials/navbar", { session: session }) %>
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>My Profile</title>
  <link rel="stylesheet" href="/css/styles.css">
  <style>
    .avatar-form {
      margin-top: 20px;
    }

    .avatar-form select,
    .avatar-form button {
      padding: 8px 12px;
      font-size: 1rem;
      border-radius: 8px;
      border: 1px solid #ccc;
      margin: 10px 5px;
    }

    .avatar-form button {
      background: linear-gradient(to right, #00c6ff, #0072ff);
      color: #fff;
      border: none;
      cursor: pointer;
      transition: transform 0.2s ease, box-shadow 0.2s ease;
    }

    .avatar-form button:hover {
      transform: translateY(-2px);
      box-shadow: 0 6px 16px rgba(0, 114, 255, 0.3);
    }

    .btn-container {
      margin-top: 30px;
      display: flex;
      flex-wrap: wrap;
      justify-content: center;
      gap: 15px;
    }

    .btn-container a {
      display: inline-block;
      padding: 10px 18px;
      background: linear-gradient(to right, #6a11cb, #2575fc);
      color: white;
      text-decoration: none;
      border-radius: 8px;
      font-weight: 600;
      transition: transform 0.2s ease, box-shadow 0.2s ease;
    }

    .btn-container a:hover {
      transform: translateY(-3px);
      box-shadow: 0 6px 16px rgba(37, 117, 252, 0.4);
    }

    .main-container {
      display: flex;
      flex-direction: column;
      align-items: center;
      padding: 40px 20px;
    }

    h2 {
      color: #0077b6;
      font-size: 2.4rem;
      margin-bottom: 20px;
    }

    .profile-card {
      background: rgba(255, 255, 255, 0.95);
      padding: 40px;
      border-radius: 16px;
      box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
      width: 100%;
      max-width: 500px;
      text-align: center;
    }

    .profile-image {
      width: 120px;
      height: 120px;
      border-radius: 50%;
      object-fit: cover;
      border: 4px solid #00b4db;
      margin-bottom: 20px;
    }

    .profile-info {
      margin: 12px 0;
      font-size: 1.1rem;
      color: #333;
    }

    .profile-info strong {
      color: #444;
    }
  </style>
</head>
<body>
  <div class="main-container">
    <h2>My Profile</h2>

    <div class="profile-card">
      <% const avatarFile = patient.avatar && patient.avatar.trim() !== '' ? patient.avatar : 'avatar1.png'; %>
      <img src="/images/<%= avatarFile %>" alt="Profile Image" class="profile-image">

      <form action="/select-avatar" method="POST" class="avatar-form">
        <label for="avatar">Change Avatar:</label>
        <select name="avatar" id="avatar" required>
          <option value="avatar1.png" <%= avatarFile === 'avatar1.png' ? 'selected' : '' %>>Avatar 1</option>
          <option value="avatar2.png" <%= avatarFile === 'avatar2.png' ? 'selected' : '' %>>Avatar 2</option>
          <option value="avatar3.png" <%= avatarFile === 'avatar3.png' ? 'selected' : '' %>>Avatar 3</option>
          <option value="avatar4.jpg" <%= avatarFile === 'avatar4.jpg' ? 'selected' : '' %>>Avatar 4</option>
          <option value="avatar5.jpg" <%= avatarFile === 'avatar5.jpg' ? 'selected' : '' %>>Avatar 5</option>
        </select>
        <button type="submit">Update Image</button>
      </form>

      <div class="profile-info"><strong>Name:</strong> <%= patient.name %></div>
      <div class="profile-info"><strong>Email:</strong> <%= patient.email %></div>
      <% if (patient.phone) { %>
        <div class="profile-info"><strong>Phone:</strong> <%= patient.phone %></div>
      <% } %>

      <div class="btn-container">
        <a href="/edit-profile">Edit Profile</a>
        <a href="/change-password">Update Password</a>
        <a href="/delete-account">Delete Account</a>
        <a href="/dashboard">Back to Dashboard</a>
      </div>
    </div>
  </div>
</body>
</html>
